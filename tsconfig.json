{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "~": ["node_modules/*", "src/types/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules"]
}
